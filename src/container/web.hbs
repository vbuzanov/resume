<div class='p-2'>
    <main>
        {{#with web}}
        <div>
            <h1 class="mb-5">Languages</h1>
            <ul>
                {{#each languages}}
                  <div class="card p-3 mb-3">
                <div class="card-body ">
                <section>
                    <li>
                        {{>title data=name big=true }}
                        <abbr title="version">{{version}}</abbr>
                        <p>{{description}}</p>
                        {{#if elements}}
                        {{>title data="Elements:"}}
                        <ul>
                            {{#each elements}}
                            <li>
                                <code><big>{{name}}</big></code>
                                <p><i>{{description}}</i></p>
                                <h4>Attributes:</h4>
                                <ul>
                                    {{#each attributes}}
                                    <li>
                                        <code>{{name}}</code>
                                        <p><i>{{description}}</i></p>
                                    </li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>
                        {{/if}}

                        {{#if properties}}
                        {{>title data="Properties:"}}
                        <ul>
                            {{#each properties}}
                            <li>
                                <code><big>{{name}}</big></code>
                                <p><i>{{description}}</i></p>
                                <h4>Values:</h4>
                                <ul>
                                    {{#each values}}
                                    <li>
                                        <code>{{value}}</code>
                                        <p><i>{{description}}</i></p>
                                    </li>
                                    {{/each}}
                                </ul>

                            </li>
                            {{/each}}
                        </ul>
                        {{/if}}

                        {{#if functions}}
                        {{>title data="Functions:"}}
                        <ul>
                            {{#each functions}}
                            <li>
                                <code><big>{{name}}</big></code>
                                <p><i>{{description}}</i></p>
                                <h4>Parameters:</h4>
                                <ul>
                                    {{#each parameters}}
                                    <li>
                                        <code>{{name}}</code>
                                        <p><i>{{description}}</i></p>
                                        <p>type: <code>{{type}}</code></p>
                                    </li>
                                    {{/each}}
                                </ul>

                            </li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </li>
                </section>
                </div>
              </div>
                {{/each}}
            </ul>
        </div>
        {{/with}}
    </main>
</div>