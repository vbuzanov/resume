<main class='p-2'>
  <div class='row g-5'>
    <div class='display-5 fw-semibold pt-5'>{{header}}</div>
    <div class='col-8'>
      {{#with contacts_data}}

      <div class='display-6 fw-semibold mb-3'>{{title}}</div>
      {{#each buttons}}
      <button
        class='btn {{#if isPrimary}}btn-warning text-light{{/if}} {{#if isOutline}}btn-outline-warning{{/if}} me-2 '>{{text}}</button>
      {{/each}}

      <div class="row my-2">
        {{#with form}}
        {{#each input}}
        <div class="col-6 my-2">
          <label class='form-label' for=''>{{label}}</label>
          <input class='form-control' placeholder="{{placeholder}}" />
          <div class='form-text'>{{caption}}</div>
        </div>
        {{/each}}


        <div>
          <hr>
        </div>

        <div class="col-12">
          {{#each switch}}
          <div class='form-check form-switch my-2'>
            <label class='form-check-label'>{{text}}</label>
            <input type='checkbox' class='form-check-input' {{#if isActive}}checked{{/if}} />
          </div>
          {{/each}}
        </div>

        {{/with}}
        <div>
          <hr>
        </div>
      </div>
      {{/with}}


      {{#with delivery}}
      <div class="mt-3">
        <div class='display-6 fw-semibold mb-3'>{{title}}</div>
        <div class="card">
          <div class="card-body row">
            {{#each select}}
            <div class="col-6">
              <label class='form-label'>{{label}}</label>
              <select class='form-select'>
                <option>{{placeholder}}</option>
                {{#each options}}
                <option value='{{value}}'>{{text}}</option>
                {{/each}}
              </select>
            </div>
            {{/each}}
          </div>
        </div>

        <div class="mt-3">
          {{#each delivery_type}}
          <div class='form-check'>
            <label class='form-check-label'>{{type}}</label>
            <input name='delivery' type='radio' class='form-check-input' {{#if @first}}checked{{/if}} />
          </div>
          {{/each}}
        </div>

      </div>
      <div>
        <hr>
      </div>
      {{#with payment}}
      <div class="mt-4">
        <div class='display-6 fw-semibold mb-3'>{{title}}</div>
        <div>
          {{#each list}}
          <div class='form-check'>
            <label class='form-check-label'>{{type}}</label>
            <input name='payment' type='radio' class='form-check-input' {{#if @first}}checked{{/if}} />
            {{#if description}}
            <div class='form-text mb-2'>{{description}}</div>
            {{/if}}
          </div>
          {{/each}}
        </div>
      </div>
      {{/with}}

      <div>
        <hr>
      </div>

      {{#with contact}}
      <div class="row ">
        <div class='display-6 fw-semibold my-4'>{{title}}</div>
        {{#each this}}
        {{#unless @first}}
        <div class="col-6 mb-3">
          <label class='form-label' for=''>{{label}}</label>
          <input class='form-control' placeholder="{{placeholder}}" />
          <div class='form-text'>{{caption}}</div>
        </div>
        {{/unless}}
        {{/each}}

      </div>
      {{/with}}
      <div>
        <hr>
      </div>

      <div class="row">
        <div>
          <label class='form-label' for=''>{{coment.label}}</label>
          <input class='form-control' placeholder="{{coment.placeholder}}" />
        </div>
      </div>
      <div>
        <hr>
      </div>
      {{/with}}


      {{#with coupon}}
      <div class="row ">
        <div class='display-6 fw-semibold my-4'>{{title}}</div>

        <div>
          {{#each select}}
          <div class="my-3">
            <label class='form-label'>{{label}}</label>
            <select class='form-select {{#if @first}}form-select-lg{{else}}form-select-sm{{/if}}'>
              <option>{{placeholder}}</option>
              {{#each options}}
              <option value='{{value}}'>{{text}}</option>
              {{/each}}
            </select>
          </div>
          {{/each}}

          {{#each add}}
          <div class="my-3">
            <label class='form-label' for=''>{{label}}</label>
            <input class='form-control {{#if @first}}form-control-lg{{else}}form-control-sm{{/if}}'
              placeholder="{{placeholder}}" />
            <div class='form-text'>{{caption}}</div>
          </div>
          {{/each}}
        </div>
      </div>
      {{/with}}
      <div>
        <hr>
      </div>
      {{#with quiz}}
      <div class="row">
        <div class='display-6 fw-semibold my-4'>{{title}}</div>
        {{#with preference}}
        <div>
          <label class='form-label'>{{title}}</label>
        </div>
        <div>
          {{#each options}}
          <div class='form-check'>

            <label class='form-check-label'>{{this}}</label>
            <input name='quiz' type='radio' class='form-check-input' {{#if @first}}checked{{/if}} />

          </div>
          {{/each}}
        </div>
        {{/with}}

        <div class="my-2">
          <label class='form-label'>{{your_expirience.label}}</label>
          <input name='your_expirience' class='form-control' />
        </div>

        {{#with purchase_frequency}}
        <div>
          <label class='form-label'>{{label}}</label>
          <select class='form-select'>
            <option>{{placeholder}}</option>
            {{#each options}}
            <option value='{{value}}'>{{text}}</option>
            {{/each}}
          </select>
        </div>
        {{/with}}

        {{#with factors}}
        <div class="row my-2">
          <div>
            <div class='form-label'>{{title}} </div>
            {{#each options}}
            <div class='form-check'>
              <label class='form-check-label'>{{this}}</label>
              <input name='factor' type='checkbox' class='form-check-input' {{#if @first}}checked{{/if}} />
            </div>
            {{/each}}
          </div>
        </div>
        {{/with}}
      </div>
      {{/with}}


    </div>

    <div class='col-4'>
      <div class='card mb-3'>
        <div class='card-body'>
          {{#each action_block}}
          <div>
            <button
              class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}} mb-2 text-light">{{text}}</button>
          </div>
          {{/each}}

        </div>
      </div>
      {{#with total}}
      <div class="card">
        <div class="card-body">
          <div class='card-title display-6 fw-semibold'>{{title}}</div>
          {{#each item_list}}
          <div>{{name}}: {{price}}</div>
          {{/each}}
          <hr>
          {{#each additional_info}}
          <div>{{text}}: {{value}}</div>
          {{/each}}
          <hr>

          <div>{{total_price.text}}: {{total_price.value}}</div>
          <hr>
          {{#each button}}
          <div>
            <button
              class='btn {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}} mb-2'>{{text}}</button>
          </div>
          {{/each}}
        </div>
      </div>
      {{/with}}
    </div>

  </div>

  <hr>

</main>