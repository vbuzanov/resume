<div class='card p-1 mb-2'>
    <div class='card-body row align-items-center'>

        <div class='col-4'>
            <p>{{number}}</p>
            <p><b>{{status}}</b></p>
        </div>
        <div class='col-2'>
            <p class=" mb-1">{{amount.title}}:</p>
            <p class='fw-semibold'>{{amount.value}}</p>
        </div>
        <div class='col-4 '>
            <div class="row">
                {{#each images}}
                <div class="col-4">
                    <img class="img-fluid" width="100%" src='{{this}}' />
                </div>
                {{/each}}
            </div>

        </div>
        <div class='col-2'>
            {{#with button}}
            <a href="{{link}}" class='btn {{#if isPrimary}}btn-primary {{else}}btn-secondary{{/if}}'>{{text}}</a>
            {{/with}}
        </div>
    </div>
</div>